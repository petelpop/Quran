<?xml version="1.0" encoding="utf-8"?>
<resources>

    <!--  name=(type your style name) parent=Theme.SplashScreen is from API 12  -->
    <style name="Theme.App.SplashScreenBase" parent="Theme.SplashScreen">

        <!-- Use windowSplashScreenBackground to change color screen background -->
        <item name="windowSplashScreenBackground">@color/white</item>

        <!-- Use windowSplashScreenAnimatedIcon to add either a drawable or an
             animated drawable. One of these is required. -->
        <item name="windowSplashScreenAnimatedIcon">@drawable/ic_splash_foreground</item>


        <!-- Set the theme of the Activity that directly follows your splash screen. -->
        <!-- Required -->
        <item name="postSplashScreenTheme">@style/Theme.App.NoActionBar</item>
    </style>

    <style name="Theme.App.NoActionBar" parent="Theme.Material3.DayNight.NoActionBar">
        <item name="android:statusBarColor">@color/white</item>
    </style>
</resources>